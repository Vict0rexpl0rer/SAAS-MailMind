{
  "meta": {
    "name": "Email App Design System",
    "version": "2.0",
    "description": "Système de design complet pour une application email moderne avec modes clair et sombre",
    "author": "Design System Generator",
    "lastUpdated": "2025-11-28"
  },

  "designPhilosophy": {
    "principles": [
      "Clarté visuelle et hiérarchie de l'information",
      "Réduction de la charge cognitive",
      "Micro-interactions fluides et satisfaisantes",
      "Accessibilité WCAG 2.1 AA minimum",
      "Cohérence entre les modes clair et sombre"
    ],
    "inspirations": ["Linear", "Notion", "Superhuman", "Spark", "Arc Browser"],
    "targetAudience": "Professionnels et power users recherchant efficacité et esthétique"
  },

  "IMPORTANT_INSTRUCTIONS": {
    "outOfScope": [],
    "focusOn": [
      "Sidebar (navigation latérale)",
      "Email list (liste centrale des emails)",
      "Email panel (panneau de lecture à droite)",
      "Search bar",
      "Tabs (All, Unread, Archived)",
      "Email items dans la liste",
      "Toolbar actions (Reply, Archive, Delete, etc.)",
      "Modals et dropdowns",
      "Boutons et inputs",
      "Empty states et loading states",
      "Toasts et notifications"
    ],
    "note": "Toutes les zones de l'application sont maintenant dans le scope, incluant la sidebar qui doit supporter le dark/light mode."
  },

